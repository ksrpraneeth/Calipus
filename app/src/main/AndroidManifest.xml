<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="benchmark.calipus.com.calipus">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="benchmark.calipus.com.calipus.Applications.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".Activities.BenchmarkChooser"
            android:label="@string/title_activity_benchmark_chooser" />
        <activity
            android:name=".Activities.TabsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme">

        </activity>
        <activity
            android:name=".Activities.ProgressActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_progress"
            android:theme="@style/FullscreenTheme"></activity>
        <activity
            android:name=".Activities.Splash"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppBaseTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
